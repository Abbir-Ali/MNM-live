    },
    {
      "type": "collection",
      "id": "collection_settings",
      "label": "Collection Settings"
    },
    {
      "type": "collection_list",
      "id": "collection_list_settings",
      "label": "collection List Settings",
      "limit": 2
    }
  ],
  "blocks": [],
